{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [{
    "source": "functions",
    "codebase": "default",
    "runtime": "nodejs20"
  }],
  "storage": {
    "rules": "storage.rules"
  }
}
