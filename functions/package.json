{
  "name": "functions",
  "description": "Firebase Functions for Web to PDF Converter",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "postinstall": "echo 'Puppeteer will download Chromium automatically'"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "@sparticuz/chromium": "^123.0.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.5.0",
    "pdf-lib": "^1.17.1",
    "puppeteer-core": "^21.11.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0"
  },
  "private": true
}
